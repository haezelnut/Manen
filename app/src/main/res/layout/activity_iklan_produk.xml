<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".IklanProduk">

    <LinearLayout
        android:id="@+id/linearTopProduk"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="@drawable/background_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="11dp"
            android:onClick="backFromIklanProduk"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/avenir_black"
            android:text="Iklan Produk"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTopProduk">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTopProduk"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/avenir_black"
        android:textColor="@color/grey2"
        android:text="Buat Iklan"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTopProduk" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="328dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/avenir_roman"
        android:textColor="@color/grey"
        android:textSize="14dp"
        android:text="Yuk buat iklan sesuai kebutuhanmu untuk ningkatin pendapatan dari penjualan produk!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <LinearLayout
        android:id="@+id/iklanOtomatis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ikaln Otomatis"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey2"
            android:fontFamily="@font/avenir_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iklan lebih praktis"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Produk yang diiklankan dipilihkan oleh &#10;  sistem "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Produk akan diacak secara rutin oleh &#10;  sistem "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Biaya iklan akan diatur secara rutin &#10;  oleh sistem "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Kamu cukup atur pilih budget iklan "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Mulai Iklan Otomatis"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:fontFamily="@font/avenir_black"
            android:textColor="@color/white"
            android:background="@drawable/rounded_buttontext1"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/iklanManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/iklanOtomatis">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ikaln Manual"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey2"
            android:fontFamily="@font/avenir_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamu yang pegang kendali produkmu!"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Bebas mau pilih produk yang mana &#10;  untuk diiklankan "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Bebas pilih kata kunci "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Biaya iklan kamu yang pilih "
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/avenir_roman"
            android:drawableLeft="@drawable/ic_ceklis"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Mulai Iklan Manual"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:fontFamily="@font/avenir_black"
            android:textColor="@color/white"
            android:background="@drawable/rounded_buttontext1"/>



    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>