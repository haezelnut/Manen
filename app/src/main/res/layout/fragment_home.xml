        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_top">

            <RelativeLayout
                android:id="@+id/headerHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/photoProfile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/foto_amat"
                    app:shapeAppearanceOverlay="@style/roundedImageViewProfil" />

                <TextView
                    android:id="@+id/profilName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="55dp"
                    android:layout_toEndOf="@id/photoProfile"
                    android:fontFamily="@font/avenir_black"
                    android:text="Mamat"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="26dp"
                    android:layout_toEndOf="@id/photoProfile"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:fontFamily="@font/avenir_book"
                    android:text="Surabaya"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"

                    />

                <ImageButton
                    android:layout_width="84.17dp"
                    android:layout_height="57.44dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/rounded_buttontext1"
                    android:elevation="2dp"
                    android:src="@drawable/vector_icon_share" />

            </RelativeLayout>
        </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/operationalHoursView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_toStartOf="@id/lineVertikal"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"

                android:text="Jam Operasional"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/operationalHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/operationalHoursView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:layout_toStartOf="@id/lineVertikal"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:text="24 Jam"
                android:textColor="#9D9D9D"
                android:textSize="18sp" />

            <ImageView
