                                android:src="@drawable/ic_produk"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/avenir_roman"
                                android:text="Produk"
                                android:textColor="#5B5B5B"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageButton
                                android:id="@+id/toOrder"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="@drawable/rounded_buttontext1"
                                android:src="@drawable/ic_pesanan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/avenir_roman"
                                android:text="Pesanan"
                                android:textColor="#5B5B5B"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageButton
                                android:id="@+id/lacakPesanan"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="@drawable/rounded_buttontext1"
                                android:src="@drawable/ic_lacak_pesanan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/avenir_roman"
                                android:text="Lacak Pesanan"
                                android:textColor="#5B5B5B"
                                android:textAlignment="center"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp">

                            <ImageButton
                                android:id="@+id/btnPromo"
                                android:onClick="btnPromo"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="@drawable/rounded_buttontext1"
                                android:src="@drawable/ic_promo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/avenir_roman"
                                android:text="Promo"
                                android:textColor="#5B5B5B"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp">

                            <ImageButton
                                android:id="@+id/btnIklan"
                                android:onClick="btnIklan"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="@drawable/rounded_buttontext1"
                                android:src="@drawable/ic_iklan_produk" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/avenir_roman"
                                android:text="Iklan Produk"
                                android:textColor="#5B5B5B"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp">

                            <ImageButton
                                android:id="@+id/btnBisnis"
                                android:onClick="btnBisnis"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="@drawable/rounded_buttontext1"
                                android:src="@drawable/ic_bisnis_analisis" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/avenir_roman"
                                android:text="Bisnis Analisis"
                                android:textColor="#5B5B5B"
                                android:textAlignment="center"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid_main_menu"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/line_horizaontal" />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/checkProduckSelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/avenir_black"
                android:text="Ringkasan Penjualan Produkmu"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkProduckSelling"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/avenir_roman"
                android:text="Terakhir diperbarui : 14 April 2022 (15.00) WIB"
                android:textColor="#9B9B9B"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkProduckDevelop"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"

            >

            <GridLayout
                android:id="@+id/grid_content_selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_buttontext1"
                            android:text="Rp.250.000"
                            android:gravity="center"
                            android:fontFamily="@font/avenir_black"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="Pendapatan"
                            android:textColor="#5B5B5B"
                            android:textSize="16sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_buttontext1"
                            android:text="20"
                            android:gravity="center"
                            android:fontFamily="@font/avenir_black"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="Produk Dilihat"
                            android:textAlignment="center"
                            android:textColor="#5B5B5B"
                            android:textSize="16sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_buttontext1"
                            android:text="17"
                            android:gravity="center"
                            android:fontFamily="@font/avenir_black"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/avenir_roman"
                            android:text="Produk Diklik"
                            android:textAlignment="center"
                            android:textColor="#5B5B5B"
                            android:textSize="16sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid_content_selling"
                android:layout_marginTop="16dp"
                android:src="@drawable/line_horizaontal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/infromationSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/avenir_black"
                android:text="Seputar Informasi Seller"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textWelcomeSellerInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infromationSeller"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/avenir_roman"
