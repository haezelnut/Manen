<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">


            <ImageView
                android:id="@+id/imageViewClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_close" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/avenir_black"
                android:text="Ubah Deskripsi Produk"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/brokoli_image_edit" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="383dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtProdukUbah"
                        android:layout_width="91dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:hint="Nama Produk"
                        android:padding="5dp"
                        android:text="Produk     :"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTxt1"
                        android:layout_width="145dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="96dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:padding="5dp"
                        android:text="Brokoli"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="91dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Deskripsi  :"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTxt2"
                        android:layout_width="145dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="96dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Deskripsi"
                        android:padding="5dp"
                        android:text=""
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtView3"
                        android:layout_width="91dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Harga      :"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTxt3"
                        android:layout_width="145dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="96dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Harga"
                        android:padding="5dp"
                        android:text="Rp 15.000"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="91dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Berat       :"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTxt4"
                        android:layout_width="145dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="96dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Berat"
                        android:padding="5dp"
                        android:text="2 kg"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="91dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Tersisa     :"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTxt5"
                        android:layout_width="145dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="96dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:padding="5dp"
                        android:text="9"
                        android:textSize="15dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSimpan"
                    android:onClick="btnSimpan"
                    android:layout_width="249dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_buttontext1"
                    android:fontFamily="@font/avenir_black"
                    android:padding="10dp"
                    android:text="Simpan"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>