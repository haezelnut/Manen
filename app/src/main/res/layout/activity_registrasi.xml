<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrasi">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iconViewRegister"
            android:layout_width="207dp"
            android:layout_height="200dp"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />

        <ImageButton
            android:id="@+id/backFromRegister"
            android:onClick="backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="34dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintEnd_toStartOf="@+id/iconViewRegister"
            app:layout_constraintHorizontal_bias="0.377"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headerTextRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:text="Daftar Sebagai Seller"
            android:textColor="#5B5B5B"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconViewRegister"
            app:layout_constraintVertical_bias="0.048" />

        <EditText
            android:id="@+id/inputEmailRegister"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_edittext1"
            android:fontFamily="@font/avenir_black"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColorHint="#80FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerTextRegister"
            app:layout_constraintVertical_bias="0.012" />

        <EditText
            android:id="@+id/inputPhoneRegister"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_edittext1"
            android:fontFamily="@font/avenir_black"
            android:hint="No Telepon"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColorHint="#80FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputEmailRegister"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/inputPasswordRegister"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rounded_edittext1"
            android:drawableRight="@drawable/ic_baseline_visibility_off_24"
            android:fontFamily="@font/avenir_black"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:longClickable="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#80FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPhoneRegister"
            app:layout_constraintVertical_bias="0.003" />

        <EditText
            android:id="@+id/inputConfirmRegister"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext1"
            android:drawableRight="@drawable/ic_baseline_visibility_off_24"
            android:fontFamily="@font/avenir_black"
            android:hint="Konfirmasi"
            android:inputType="textPassword"
            android:longClickable="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#80FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPasswordRegister"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/registerBtn"
            android:onClick="toVerification"
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_buttontext1"
            android:fontFamily="@font/avenir_black"
            android:hint="Daftar Sekarang"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputConfirmRegister"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textFooterRegister"
            android:layout_width="251dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="Dengan mendaftar sebagai seller, anda \nmenyetujui syarat &amp; ketentuan"
            android:textAlignment="center"
            android:textColor="#9D9D9D"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerBtn"
            app:layout_constraintVertical_bias="0.007" />

        <ImageView
            android:id="@+id/textOptionRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/linedaftar"
            android:textColor="#9D9D9D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFooterRegister"
            app:layout_constraintVertical_bias="0.038" />

        <LinearLayout
            android:id="@+id/optionRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textOptionRegister"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/ButtonRegFacebook"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/login_facebook_btn_" />

            <ImageButton
                android:id="@+id/ButtonRegGoogle"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:src="@drawable/login_google_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liniear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionRegister">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_black"
                android:text="Sudah jadi seller?"
                android:textColor="#9D9D9D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:clickable="true"
                android:fontFamily="@font/avenir_black"
                android:onClick="toLogin"
                android:text="Masuk"
                android:textColor="#5B5B5B"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/liniear1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>