<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_onboarding"
    tools:context=".BerhasilMendaftarScreen">

    <ImageView
        android:id="@+id/imageBerhasilScreen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tittleBerhasil"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageBerhasilScreen"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:text="Hore Mamat, kamu berhasil melakukan pendaftaran!"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBerhasilScreen" />

    <TextView
        android:id="@+id/descBerhasil"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tittleBerhasil"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/avenir_black"
        android:gravity="center"
        android:text="Selamat ya, ayo mulai jual produkmu ke masyarakat!"
        android:textColor="@color/grey"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittleBerhasil" />

    <Button
        android:layout_width="231dp"
        android:layout_height="41dp"
        android:layout_below="@id/descBerhasil"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_buttontext1"
        android:fontFamily="@font/avenir_black"
        android:onClick="toHomeScreen"
        android:text="mulai"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descBerhasil" />

</androidx.constraintlayout.widget.ConstraintLayout>