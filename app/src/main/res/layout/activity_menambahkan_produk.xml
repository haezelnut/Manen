<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MenambahkanProduk">

    <LinearLayout
        android:id="@+id/linearTopProduk"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="@drawable/background_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:onClick="backFromMenambahkanProduk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="11dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/avenir_black"
            android:text="Tambah Produk"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTopProduk">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearTopProduk"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:text="Lengkapin informasi produkmu ya!"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearTopProduk" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/isifotoproduk" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Produk    :"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Isi nama produk"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Deskripsi :"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Isi deskripsi produk"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Kategori  :"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_black"
                            android:text="Sayuran"
                            android:textColor="@color/grey2" />

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_black"
                            android:text="Hasil Ternak"
                            android:textColor="@color/grey2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/avenir_black"
                            android:text="Buah"
                            android:textColor="@color/grey2" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Harga     :"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Isi harga produk"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Berat      :"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Isi berat produk"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/rectangle"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="Tersisa     :"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/rectangle"
                        android:drawableRight="@drawable/edit_icon"
                        android:fontFamily="@font/avenir_black"
                        android:hint="Isi kesediaan produk"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15dp" />

                </LinearLayout>

                <Button
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/avenir_black"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_buttontext1"
                    android:padding="5dp"
                    android:text="Simpan" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>