<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".TambahProduk2">

    <LinearLayout
        android:id="@+id/linearTopProduk"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="@drawable/background_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="11dp"
            android:background="@null"
            android:onClick="backFromInputProduct2"
            android:src="@drawable/ic_baseline_arrow_back_ios_24_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/avenir_black"
            android:text="Tambah Produk"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_black"
            android:gravity="center"
            android:text="Lengkapin informasi produkmu ya!"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/linearTopProduk" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/isifotoproduk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Produk    :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle"
                    android:drawableRight="@drawable/edit_icon"
                    android:fontFamily="@font/avenir_black"
                    android:hint="Isi nama produk"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Deskripsi :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle"
                    android:drawableRight="@drawable/edit_icon"
                    android:fontFamily="@font/avenir_black"
                    android:hint="Isi deskripsi produk"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Kategori  :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/avenir_black"
                        android:text="Sayuran"
                        android:textColor="@color/grey2" />
                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/avenir_black"
                        android:textColor="@color/grey2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Hasil Ternak" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/avenir_black"
                        android:textColor="@color/grey2"
                        android:layout_weight="1"
                        android:text="Buah" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Harga     :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle"
                    android:drawableRight="@drawable/edit_icon"
                    android:fontFamily="@font/avenir_black"
                    android:hint="Isi harga produk"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Berat      :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle"
                    android:drawableRight="@drawable/edit_icon"
                    android:fontFamily="@font/avenir_black"
                    android:hint="Isi berat produk"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Tersisa     :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rectangle"
                    android:drawableRight="@drawable/edit_icon"
                    android:fontFamily="@font/avenir_black"
                    android:hint="Isi kesediaan produk"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>